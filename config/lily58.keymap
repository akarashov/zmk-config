#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>

#define CMK 0
#define SYM 1
#define NUM 2
#define NAV 3
#define FUN 4
#define DAN 5
#define LCK 6

&caps_word {
   continue-list = <UNDERSCORE MINUS BACKSPACE>;
};

/ {

    combos {
        #include "combos.dtsi"
    };

    behaviors {
        skq: sticky_key_quick_release {
            compatible = "zmk,behavior-sticky-key";
            label = "STICKY_KEY_QUICK_RELEASE";
            #binding-cells = <1>;
            bindings = <&kp>;
            release-after-ms = <1000>;
            quick-release;
        };
    };
};


/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "Base";
// ------------------------------------------------------------------------------------------------------------------------------------------------
//  |         |         |         |         |         |         |                     |         |         |         |         |         |         |
//  |         |    Q    |    W    |    E    |    R    |    T    |                     |    Y    |    U    |    I    |    O    |    P    |         |
//  |         |    A    |    S    |    D    |    F    |    G    |                     |    H    |    J    |    K    |    L    |    ;    |         |
//  |         |    Z    |    X    |    C    |    V    |    B    |         | |         |    N    |    M    |    ,    |    .    |  -FUN-  |         |
//                                |         |         |  SPACE  |  -SYM-  | |  -NUM-  |  ENTER  |         |         |
            bindings = <
    &none     &none     &none     &none     &none     &none                           &none     &none     &none     &none     &none     &none
    &none     &kp Q     &kp W     &kp E     &kp R     &kp T                           &kp Y     &kp U     &kp I     &kp O     &kp P     &none
    &none     &kp A     &kp S     &kp D     &kp F     &kp G                           &kp H     &kp J     &kp K     &kp L     &kp SEMI  &none
    &none     &kp Z     &kp X     &kp C     &kp V     &kp B     &none        &none    &kp N     &kp M     &kp COMMA &kp DOT   &mo FUN   &none
                                  &none     &none     &kp SPACE &mo SYM      &mo NUM  &kp RET   &none     &none
            >;
        };

        symbol_layer {
            display-name = "Symbols";
//  -----------------------------------------------------------------------------------------------------------------------------------------------
//  |         |         |         |         |         |         |                    |         |         |         |         |         |          |
//  |         |         |    \    |    %    |    $    |         |                    |         |    ^    |    {    |    }    |         |          |
//  |         |         |    (    |    )    |    :    |    ?    |                    |    "    |    '    |    [    |    ]    |  TRANS  |          |
//  |         |         |    `    |    @    |    &    |         |         ||         |         |    #    |    <    |    >    |  TRANS  |          |
//                                |         |         |  TRANS  |  _SYM_  ||   ESC   |  TRANS  |         |         |
            bindings = <
    &none     &none     &none     &none     &none     &none                           &none     &none     &none     &none     &none     &none   
    &none     &none     &kp BSLH  &kp PRCNT &kp DLLR  &none                           &none     &kp CARET &kp LBRC  &kp RBRC  &none     &none 
    &none     &none     &kp LPAR  &kp RPAR  &kp COLON &kp QMARK                       &kp DQT   &kp SQT   &kp LBKT  &kp RBKT  &trans    &none 
    &none     &none     &kp GRAVE &kp AT    &kp AMPS  &none      &none      &none     &none     &kp HASH  &kp LT    &kp GT    &trans    &none 
                                  &none     &none     &trans     &trans     &kp ESC   &trans    &none     &none 
            >;
        };

        number_layer {
            display-name = "Number";
//  -----------------------------------------------------------------------------------------------------------------------------------------------
//  |         |         |         |         |         |         |                    |         |         |         |         |         |          |
//  |         |         |    /    |    -    |    |    |         |                    |         |    7    |    8    |    9    |         |          |
//  |         |         |    ~    |    _    |    =    |         |                    |    .    |    4    |    5    |    6    |  -NAV-  |          |
//  |         |         |    *    |    +    |    !    |         |         ||         |    0    |    1    |    2    |    3    |         |          |
//                                |         |         |  TRANS  |   ESC   ||  _NUM_  |  TRANS  |         |         |
            bindings = <
    &none     &none     &none     &none     &none     &none                          &none     &none     &none     &none     &none     &none   
    &none     &none     &kp FSLH  &kp MINUS &kp PIPE  &none                          &none     &kp N7    &kp N8    &kp N9    &none     &none
    &none     &none     &kp TILDE &kp UNDER &kp EQUAL &none                          &kp DOT   &kp N4    &kp N5    &kp N6    &mo NAV   &none
    &none     &none     &kp STAR  &kp PLUS  &kp EXCL  &none      &none       &none   &kp N0    &kp N1    &kp N2    &kp N3    &none     &none
                                  &none     &none     &trans     &kp ESC     &trans  &trans    &none     &none
            >;
        };

        nav_layer {
            display-name = "Navigations";
// ------------------------------------------------------------------------------------------------------------------------------------------------
//  |         |         |         |         |         |         |                    |         |         |         |         |         |          |
//  |         |         |         |  PSCRN  |         |         |                    |         |         |         |         |         |          |
//  |         |   ALT   |  SHIFT  |   DEL   |   INS   |         |                    |   LEFT  |   DOWN  |    UP   |  RIGHT  |  _NAV_  |          |
//  |         |         |    X    |    C    |    V    |         |         ||         |   HOME  | PAGE_DN | PAGE_UP |   END   |         |          |
//                                |         |         |  TRANS  |   CTRL  ||  _NUM_  |  TRANS  |         |         |
            bindings = <
    &none     &none     &none     &none     &none     &none                          &none     &none     &none     &none     &none      &none   
    &none     &none     &none     &kp PSCRN &none     &none                          &none     &none     &none     &none     &none      &none
    &none     &kp LALT  &kp LSHFT &kp DEL   &kp INS   &none                          &kp LEFT  &kp DOWN  &kp UP    &kp RIGHT &trans     &none  
    &none     &none     &kp X     &kp C     &kp V     &none      &none      &none    &kp HOME  &kp PG_DN &kp PG_UP &kp END   &none      &none
                                  &none     &none     &trans     &LCTRL     &trans   &trans    &none     &none
            >;
        };

        fun_layer {
            display-name = "Functional & Bluetooth";
// ------------------------------------------------------------------------------------------------------------------------------------------------
//  |         |         |         |         |         |         |                    |         |         |         |         |         |          |
//  |         |         |   BT    |         |         |  TOGGLE |                    |    F12  |    F7   |    F8   |    F9   |         |          |
//  |         |         |   BT2   |   BT1   |   BT0   |         |                    |    F11  |    F4   |    F5   |    F6   |         |          |
//  |         |  -DAN-  |         |  USB    |         |         |         ||         |    F10  |    F1   |    F2   |    F3   |  _FUN_  |          |
//                                |         |         |         |         ||         |   TRANS |         |         |
            bindings = <
    &none     &none     &none      &none    &none     &none                          &none     &none     &none     &none     &none      &none   
    &none     &none     &out OUT_BLE &none  &none     &out OUT_TOG                   &kp F12   &kp F7    &kp F8    &kp F9    &none      &none
    &none     &none     &bt BT_SEL 2 &bt BT_SEL 1 &bt BT_SEL 0 &none                  &kp F11   &kp F4    &kp F5    &kp F6    &none      &none  
    &none     &mo DAN   &none     &none     &out OUT_USB &none &none         &none    &kp F10   &kp F1    &kp F2    &kp F3    &trans     &none
                                  &none     &none     &trans   &none         &none   &trans    &none     &none
            >;
        };

        danger_layer {
            display-name = "Dangerous";
// -----------------------------------------------------------------
// |     |     |     |     |     | |     |     |     |     |     |
// |     |     |     |     |     | |BTCLR|     |     |RESET|     |
// |     |     |     |     |     | |     |     |     |     |BOOTL|
// |_!!!_|     |     |     |     | |     |     |     |     |_FUN_|
//                   |     |     | |     |     |
// &sys_reset - Resets the keyboard and re-runs the firmware flashed to the device
// &bootloader - Resets the keyboard and puts it into bootloader mode, allowing you to flash new firmware
// &bt - Completes a bluetooth action given on press, BT_CLR Behavior binding to clear the paired host for the selected profile
// &out - Allows selecting whether output is sent to the USB or bluetooth connection when both are connected
// OUT_USB Behavior binding to prefer sending keyboard output to USB
// OUT_BLE Behavior binding to prefer sending keyboard output to the current bluetooth profile
// OUT_TOG Behavior binding to toggle between preferring USB and BLE
            bindings = <
&none &none &none &none &none &none &none &none &none &none &none &none
&none &none &none &none &none &none &bt BT_CLR  &none &none  &sys_reset &none &none
&none &none &none &none &none &none &none &none &none &none &bootloader &none
&none &trans &none &none &none &none &none &none &none &none &none &none &trans &none
&none &none &none &none &none &none &none &none
            >;
        };

        lock_layer {
            display-name = "Lock";
            bindings = <
&none &none &none &none &none &none &none &none &none &none &none &none
&none &none &none &none &none &none &none &none &none &none &none &none
&none &none &none &none &none &none &none &none &none &none &none &none
&none &none &none &none &none &none &none &none &none &none &none &none &none &none
&none &none &none &none &none &none &none &none
            >;
        };
    };
};
